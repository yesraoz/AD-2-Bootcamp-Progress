<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="EntryTitleStyle">
        <item name="android:fontFamily">@font/acme</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#2C2B47</item>
        <item name="android:textSize">39sp</item>
    </style>

    <style name="HomeSubTitleStyle">
        <item name="android:fontFamily">@font/acme</item>
        <item name="android:textColor">#B9B8C6</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="StartInputStyle">
        <item name="android:background">@drawable/ic_start_input_background</item>
        <item name="android:fontFamily">@font/acme</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:textColorHint">#2C2B47</item>
    </style>


    <style name="PremiumPageTitle">
        <item name="android:fontFamily">@font/acme</item>
        <item name="android:textColor">#2C2B47</item>
        <item name="android:text">@string/premium_title</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">38sp</item>
    </style>

    <style name="PremiumLeftTextStyle">
        <item name="android:fontFamily">@font/acme</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:text">@string/premium_monthly</item>
    </style>

    <style name="PremiumRightTextStyle">
        <item name="android:fontFamily">@font/acme</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:text">@string/premium_yearly</item>
    </style>

</resources>